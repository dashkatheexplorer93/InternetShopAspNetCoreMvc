@{
    ViewData["Title"] = "Page Not Found";
    ViewData["MetaDescription"] = "The requested page could not be found on our website.";
}

<div class="text-center mt-5" role="main" aria-labelledby="error-title">
    <div class="mb-4">
        <h1 id="error-title" class="display-4">Page Not Found</h1>
        <div class="display-1" aria-hidden="true">404</div>
        <p class="lead">
            We couldn't find the page you were looking for.
        </p>
    </div>
    <div>
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary" aria-label="Return to homepage">
            Return to Products
        </a>
    </div>
</div>
