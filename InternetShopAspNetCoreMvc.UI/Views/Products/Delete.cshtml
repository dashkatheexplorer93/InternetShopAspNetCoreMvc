@model InternetShopAspNetCoreMvc.Domain.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="center">
    <h1>Delete product</h1>
    <h3>Are you sure you want to delete this product?</h3>
    
    <div class="alert alert-warning">
        <strong>Warning!</strong> This action cannot be undone. The product can only be deleted if:
        <ul>
            <li>It is not in any customer's shopping cart</li>
            <li>It has not been included in any orders</li>
        </ul>
    </div>
</div>
<hr/>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/Products/@(string.IsNullOrEmpty(Model.Image) ? "no-image.jpg" : Model.Image)" 
                 width="100" 
                 alt="@Model.Name"
                 onerror="this.src='/images/no-image.jpg'"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger width-200-px" /> |
        <a class="btn btn-secondary width-200-px" asp-action="Index">Back to List</a>
    </form>
</div>
