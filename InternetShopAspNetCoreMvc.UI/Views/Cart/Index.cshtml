@model IEnumerable<InternetShopAspNetCoreMvc.Domain.Models.CartItem>

@{
	ViewData["Title"] = "Cart";
}

<div class="center">
	<h1>Cart</h1>
</div>

@if (Model.Count() > 0)
{
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Quantity)
				</th>
				
				<th>
					@Html.DisplayNameFor(model => model.Product)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Quantity)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Product.Name)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div class="btn-toolbar justify-content-between">
		<div class="btn-group">
			<a class="btn btn-primary width-200-px" asp-action="PlaceOrder" asp-controller="Orders">Place Order</a>
		</div>
		<div class="btn-group">
			<a class="btn btn-danger width-200-px" asp-action="EmptyCart">Empty Cart</a>
		</div>
	</div>
}
else
{
	<div class="text-center my-5">
		<div class="alert alert-info p-4 shadow-sm rounded" style="max-width: 600px; margin: 0 auto;">
			<i class="fas fa-shopping-cart fa-2x mb-3"></i>
			<h4 class="alert-heading mb-3">Oh no, your cart is empty!</h4>
			<p class="mb-3">You don't have any items added to the cart yet. Time to order our amazing products!</p>
			<hr>
			<a asp-controller="Products" asp-action="Index" class="btn btn-primary">
				Go to Products Page
			</a>
		</div>
	</div>
}


