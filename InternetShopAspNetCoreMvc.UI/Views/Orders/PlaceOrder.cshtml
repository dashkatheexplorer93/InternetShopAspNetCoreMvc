@model IReadOnlyCollection<CartItem>

@{
	ViewData["Title"] = "Place order";
}

<h1 class="center">Place order</h1>

<hr />
<div class="container">
	<table class="table table-hover table-bordered">
		<thead>
			<tr>
				<th scope="col">Product Name</th>
				<th scope="col">price</th>
				<th scope="col">quantity</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Product.Name</td>
					<td>@item.Product.Price.ToString("C0")</td>
					<td>@item.Quantity</td>
				</tr>
			}

		</tbody>
	</table>
	<div class="card">
		<h5 class="card-header">Order Summary</h5>
		<div class="card-body">
			<div class="d-flex justify-content-between mb-2">
				<span>Subtotal:</span>
				<span>@ViewBag.Subtotal.ToString("C0")</span>
			</div>
			<div class="d-flex justify-content-between mb-3">
				<span>Shipping Cost:</span>
				<span>@ViewBag.ShippingCost.ToString("C0")</span>
			</div>
			<hr/>
			<div class="d-flex justify-content-between mb-3">
				<h5 class="card-title mb-0">Total:</h5>
				<h5 class="card-title mb-0">@ViewBag.Total.ToString("C0")</h5>
			</div>
			<a asp-action="PlaceOrderConfirmed" class="btn btn-success width-200-px">Confirm</a>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
